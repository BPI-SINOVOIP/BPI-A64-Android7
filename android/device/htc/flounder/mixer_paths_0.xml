  <ctl name="Mic Jack Switch" value="0"/>
  <ctl name="Mono ADC MIXR ADC1 Switch" value="0"/>
  <ctl name="Mono ADC MIXL ADC2 Switch" value="0"/>
  <ctl name="TDM1 Mode" value="Normal"/>
