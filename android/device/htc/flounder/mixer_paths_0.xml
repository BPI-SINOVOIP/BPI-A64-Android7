  <path name="voice-headset-mic">
    <ctl name="IN2 Boost" value="1"/>
    <ctl name="Mono ADC Capture Volume" value="66"/>
    <ctl name="Mono ADC MIXR ADC1 Switch" value="1"/>
    <ctl name="TDM1 Mode" value="RR Copy"/>
