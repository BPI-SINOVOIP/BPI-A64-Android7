<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:background="@drawable/main_button_style"
        android:clickable="true" >

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_icon"
			android:layout_marginRight="10dp"
            android:text="@string/select_file_title"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/back_btn"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/divider_buttom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/start_install_btn"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="#BEBEBE" />

    <RelativeLayout
        android:id="@+id/start_install_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/main_button_style"
        android:clickable="false" >

        <TextView
            android:id="@+id/start_install_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/start_install"
            android:textColor="#666666"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/start_install_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/start_install_txt"
            android:background="@drawable/ic_check_nor"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/divider"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_version" />

        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/imageView1"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/size_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_layout"
        android:layout_below="@+id/name_layout"
        android:layout_marginTop="32dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dot" />

        <TextView
            android:id="@+id/package_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/verifying_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider_buttom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>